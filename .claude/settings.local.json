{
  "defaultMode": "bypassPermissions",
  "permissions": {
    "allow": [
      "Bash(*)",
      "Edit(**)",
      "Write(**)",
      "Read(**)",
      "Glob(**)",
      "Grep(**)",
      "Task(*)",
      "WebFetch(*)",
      "WebSearch(*)",
      "Skill(*)",
      "NotebookEdit(**)",
      "TodoWrite(*)",
      "AskUserQuestion(*)",
      "Bash(claude doctor:*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf .bare)",
      "Bash(*--force*push*main*)",
      "Bash(*--force*push*master*)",
      "Edit(.env)",
      "Write(.env)",
      "Edit(.env.*)",
      "Write(.env.*)"
    ]
  }
}
