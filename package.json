{
  "name": "@asf/swarm-pulse-sdk",
  "version": "0.1.0",
  "description": "Lightweight SDK for ASF agents to report status to SQLite without stdout",
  "main": "dist/core/monitoring/index.js",
  "types": "dist/core/monitoring/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "asf",
    "agent",
    "monitoring",
    "sqlite",
    "dashboard"
  ],
  "author": "ASF Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "ajv": "^8.17.1",
    "better-sqlite3": "^12.5.0",
    "blessed-contrib": "^4.11.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "neo-blessed": "^0.2.0",
    "ora": "^8.1.1",
    "tree-kill": "^1.2.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/blessed": "^0.1.27",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
